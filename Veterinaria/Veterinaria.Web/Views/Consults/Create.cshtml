@model Veterinaria.Web.Models.Consult

@{
    ViewBag.Title = "Create";
}

    <body style="background-image:url(../../Content/img/Interface/Paw_Wallpaper.jpg)">
        <header>
            <div class="container col-8">
                <div class="py-3"></div>
                <div class="card">
                    <div class="card-header bg-dark text-white text-center">
                        <h2>Agendar Consulta</h2>
                    </div>
                    <div class="py-2"></div>
                    <div class="px-2">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    <h5>@Html.LabelFor(model => model.ConsultDate, htmlAttributes: new { @class = "control-label col-md-5" })</h5>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.ConsultDate, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.ConsultDate, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <h5>@Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-5" })</h5>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <h5>@Html.LabelFor(model => model.ConsultType, htmlAttributes: new { @class = "control-label col-md-5" })</h5>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.ConsultType, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.ConsultType, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Agendar" class="btn btn-success" />
                                    <a href="@Url.Action("Index","Consults")" class="btn btn-dark">Cancelar</a>
                                </div>
                            </div>
                        }
                        <div class="py-2"></div>
                    </div>
                </div>
            </div>
        </header>
    </body>