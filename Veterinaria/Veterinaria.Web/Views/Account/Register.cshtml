@model Veterinaria.Web.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrarse";
}

    <body style="background-image:url(../../Content/img/Interface/Paw_Wallpaper.jpg)">
        <header>
            <div class="container col-8">
                <div class="py-3"></div>
                <div class="card">
                    <div class="card-header bg-dark text-white text-center">
                        <h2>REGISTRATE PARA COMENZAR</h2>
                    </div>
                    <div class="py-2"></div>
                    <div class="px-2">
                        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="form-group">
                                <h5>@Html.LabelFor(m => m.Email, new { @class = "col-md-6 control-label" })</h5>
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <h5>@Html.LabelFor(m => m.Password, new { @class = "col-md-6 control-label" })</h5>
                                <div class="col-md-10">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <h5>@Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-6 control-label" })</h5>
                                <div class="col-md-10">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" class="btn btn-success" value="Registrarse" />
                                </div>
                            </div>
                        }
                        <div class="py-2"></div>
                    </div>
                </div>
            </div>
        </header>
     </body>


     

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
