@model IEnumerable<Veterinaria.Web.Models.Veterinary>

@{
    ViewBag.Title = "Index";
}

    <body style="background-image:url(../../Content/img/Interface/Paw_Wallpaper.jpg)">
        <header>
            <div class="container col-8">
                <div class="py-3"></div>
                <div class="card">
                    <div class="card-header bg-dark text-white text-center">
                        <h2>VETERINARIOS</h2>
                        <a href="@Url.Action("Create","Veterinaries")" class="btn btn-success">Anexar</a>

                    </div>
                    <div class="py-2"></div>
                    <div class="px-2">
                        <table class="table justify-content-center">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
  
                                        <a href="@Url.Action("Edit","Veterinaries", new { id = item.Id })" class="btn btn-dark">Editar</a>
                                        <a href="@Url.Action("Details","Veterinaries", new { id = item.Id })" class="btn btn-warning">Detalles</a>
                                        <a href="@Url.Action("Delete","Veterinaries", new { id = item.Id })" class="btn btn-danger">Eliminar</a>
                                    </td>
                                </tr>
                            }

                        </table>
                    </div>
                </div>
            </div>
        </header>
    </body>


