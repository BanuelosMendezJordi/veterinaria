@model Veterinaria.Web.Models.Pet

@{
    ViewBag.Title = "Detalles";
}

    <body style="background-image:url(../../Content/img/Interface/Paw_Wallpaper.jpg)">
        <div class="py-2"></div>
        <div class="row col-md-12 justify-content-between">
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-header py-2 bg-info">
                        <h5 class="text-center m-0 text-white">@Model.Name</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-sm">
                            <tr>
                                <td>Nombre</td>
                                <td>@Model.Name</td>
                            </tr>
                            <tr>
                                <td>Tipo</td>
                                <td>@Model.PetType</td>
                            </tr>
                            <tr>
                                <td>Edad</td>
                                <td>@Model.Age Meses</td>
                            </tr>
                            <tr>
                                <td>Fecha de Nacimiento</td>
                                <td>@Model.BirthDate.ToShortDateString()</td>
                            </tr>
                            <tr>
                                <td>Raza</td>
                                <td>@Model.Raza</td>
                            </tr>
                            <tr>
                                <td>Peso</td>
                                <td>@Model.Weight</td>
                            </tr>
                            <tr>
                                <td>Altura</td>
                                <td>@Model.Height</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="">
                    <div class="card mb-3">
                        <div class="card-header py-2 bg-info">
                            <h5 class="text-center m-0 text-white">Fotografia</h5>
                        </div>
                        <div class="card-header">
                            @if (Model.PetImage == null)
                            {
                                <img src="~/Content/img/4fecdf203e93afdfd0360d3f8194ccbf.png" class="img-thumbnail" width="500" />
                            }
                            else if (Model.PetImage != null)
                            {
                                <img src="~/Content/img/PetPictures/@Model.PetImage" class="img-thumbnail" width="500" />
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>


